### Copy this file to `.env` and fill in real credentials. Do NOT commit `.env` to git.

# MongoDB connection URI. Example Atlas URI:
# MONGODB_URI=mongodb+srv://<dbuser>:<password>@cluster0.mongodb.net/grand-restaurant?retryWrites=true&w=majority

MONGODB_URI=

# Server port (optional)
PORT=5000

# JWT secret
JWT_SECRET=your_jwt_secret_here

# Optional cloud upload credentials (if used)
# CLOUDINARY_CLOUD_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=
